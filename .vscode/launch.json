    "version": "0.2.0",
    "configurations": [
        {
            "name": "Main Debugger",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "args": [
                "--config=qmix",
                "--env-config=gymma",
                "with",
                "env_args.time_limit=25",
                "env_args.key=\"unity_env\""
            ]
        }
    ]
}